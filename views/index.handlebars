<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="bar">
			<h1>Enjoy your Burger</h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each burgers}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>
                        {{this.id}}. {{this.burger_name}}
					</pre>
				</div>
				<div class="col-xs-3 text-center">
					<form id="createForm" id="burg" action="/burgers/update" method="put" class="button-size">
						<input type="hidden" type="text" name="devoured" name="burger_id" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each burgers}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}">
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-danger" id="btn-text">Submit</button>
			</form>
			<p>Enter a burger you are craving right now and Click the "Submit" button.</p>
		</div>
	</div>
</div>